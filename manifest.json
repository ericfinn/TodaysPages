{
	"author": "Eric Finn",
	"description": "Opens pages based on the day of the week",
	"manifest_version": 2,
	"name": "Today's Pages",
	"version": "0.1.1",
	"homepage_url": "https://github.com/ericfinn/TodaysPages",
	
	"incognito": "spanning",
	"icons": {
		"16": "icons/today-16.png",
		"32": "icons/today-32.png",
		"48": "icons/today-48.png"
	},
	"permissions": [
		"bookmarks",
		"menus",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/today-16.png",
			"32": "icons/today-32.png",
			"48": "icons/today-48.png"
		}
	}
}
